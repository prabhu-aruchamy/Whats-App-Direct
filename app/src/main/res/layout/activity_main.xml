<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="#121212">

    <TextView
        android:id="@+id/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's App Direct Message"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#00EAFF"
        android:textSize="22dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by TheLordTech"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#BCADF3"
        android:textSize="10dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/inputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter Phone Number with Country Code"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Eg: 91753*****45"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message on WhatsApp"
        android:onClick="messageOnWhatsApp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="15dp"/>
</LinearLayout>